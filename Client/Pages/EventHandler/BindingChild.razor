<div>
    <p>
        Child Input:  <input @oninput="OnChangeString" />
    </p>

    <p>
        <button class="btn btn-primary" @onclick="OnReturnNoneType">Return None Type Button</button>
    </p>
</div>

@code{
    [Parameter]
    public string BindingString { get; set; }
    [Parameter]
    public EventCallback<string> BindingStringChanged { get; set; }

    [Parameter]
    public EventCallback ReturnNoneType { get; set; }

    private async Task OnChangeString(ChangeEventArgs e)
    {
        BindingString = e.Value.ToString();
        await BindingStringChanged.InvokeAsync(BindingString);
    }

    private async Task OnReturnNoneType()
    {
        await ReturnNoneType.InvokeAsync();
    }
}